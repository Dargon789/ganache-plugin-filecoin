{
  "name": "root",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run tsc && cross-env NODE_OPTIONS=--max_old_space_size=4096 lerna run build",
    "clean": "npm run tsc.clean && npx lerna clean -y && npx shx rm -rf node_modules",
    "postinstall": "cd scripts && ts-node postinstall",
    "reinstall": "npm run clean && npm install",
    "test": "lerna exec --concurrency 1 -- npm run test",
    "tsc": "tsc --build ./tsconfig.json",
    "tsc.clean": "npx lerna exec -- npx shx rm -rf lib dist typings"
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.13",
    "@types/node": "17.0.0",
    "chalk": "4.1.2",
    "comment-json": "4.1.1",
    "cross-env": "7.0.3",
    "fs-extra": "9.1.0",
    "glob": "7.1.6",
    "husky": "5.2.0",
    "lerna": "8.1.3",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.2",
    "semver": "7.5.2",
    "shx": "0.3.3",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
